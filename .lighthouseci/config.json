{
  "ci": {
    "collect": {
      "url": ["https://earthondev.github.io/Portfolio/"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.90 }],
        "categories:best-practices": ["error", { "minScore": 0.85 }],
        "categories:seo": ["error", { "minScore": 0.90 }],
        
        "total-byte-weight": ["warn", { "maxLength": 0 }],
        "unminified-css": ["warn", { "maxLength": 0 }],
        "unminified-javascript": ["warn", { "maxLength": 0 }],
        "unused-css-rules": ["warn", { "maxLength": 0 }],
        "uses-responsive-images": ["warn", { "maxLength": 0 }],
        "uses-text-compression": ["warn", { "maxLength": 0 }],
        
        "installable-manifest": "off",
        "maskable-icon": "off", 
        "service-worker": "off",
        "splash-screen": "off",
        "themed-omnibox": "off",
        
        "color-contrast": ["warn", { "minScore": 0.8 }],
        "tap-targets": ["warn", { "minScore": 0.8 }],
        
        "csp-xss": ["warn", { "minScore": 0.8 }],
        "errors-in-console": ["warn", { "minScore": 0.8 }],
        
        "non-composited-animations": ["warn", { "maxLength": 0 }],
        
        "modern-image-formats": "warn",
        "uses-long-cache-ttl": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
